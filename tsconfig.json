{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/ui/dashboard/web/homepage/TopNavBar.ts",
    "src/ui/dashboard/web/homepage/TopNavBar.js",
    "pages/web/donations.js",
    "pages/web/donate.js",
    "src/context-providers/ShopContext.provider.ts",
    "src/components/loader.tsx"
  ],
  "exclude": ["node_modules"]
}
